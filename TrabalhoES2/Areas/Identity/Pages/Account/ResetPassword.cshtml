@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ResetPasswordModel

@{
    ViewData["Title"] = "Reset password";
}

@* — estilos isolados para a página de reset de password *@
<style>
  .reset-page {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 90vh;
    background: linear-gradient(135deg, #ff9a9e, #fad0c4);
  }
  .reset-card {
    background: #fff;
    border-radius: 1rem;
    box-shadow: 0 8px 24px rgba(0,0,0,.1);
    width: 100%;
    max-width: 400px;
    overflow: hidden;
    animation: fadeInScale 0.8s ease-out;
  }
  .reset-card .card-header {
    background: linear-gradient(135deg, #6a11cb, #2575fc);
    color: #fff;
    text-align: center;
    padding: 1.5rem;
    font-size: 1.5rem;
    font-weight: 600;
  }
  .reset-card .card-body {
    padding: 2rem;
  }
  .form-floating > .form-control {
    border-radius: .5rem;
  }
  .btn-reset {
    border-radius: .5rem;
    padding: .75rem;
    font-size: 1rem;
    font-weight: 600;
  }
  @@keyframes fadeInScale {
    from { opacity: 0; transform: scale(0.9); }
    to   { opacity: 1; transform: scale(1); }
  }
</style>

<div class="reset-page">
  <div class="card reset-card">
    <div class="card-header">
      Reset password
    </div>
    <div class="card-body">
      <h2 class="h5 text-center mb-4">Reset your password</h2>
      <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
        <input asp-for="Input.Code" type="hidden" />

        <div class="form-floating mb-3">
          <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" autocomplete="username" />
          <label asp-for="Input.Email">Email</label>
          <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
          <input asp-for="Input.Password" type="password" class="form-control" placeholder="New password" autocomplete="new-password" />
          <label asp-for="Input.Password">New Password</label>
          <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-floating mb-4">
          <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" autocomplete="new-password" />
          <label asp-for="Input.ConfirmPassword">Confirm Password</label>
          <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100 btn-reset">Reset</button>
      </form>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
