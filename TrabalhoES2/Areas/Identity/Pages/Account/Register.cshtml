@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

@* — estilos isolados para a página de registo *@
<style>
  .register-page {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 90vh;
    background: white;
  }
  .register-card {
    background: #fff;
    border-radius: 1rem;
    box-shadow: 0 8px 24px rgba(0,0,0,.1);
    max-width: 400px;
    width: 100%;
    overflow: hidden;
    animation: fadeInDown 0.8s ease-out;
  }
  .register-card .card-header {
    background: linear-gradient(135deg, #28a745, #218838);
    color: #fff;
    text-align: center;
    padding: 1.5rem;
    font-size: 1.5rem;
    font-weight: 600;
  }
  .register-card .card-body {
    padding: 2rem;
  }
  .form-floating > .form-control {
    border-radius: .5rem;
  }
  .btn-register {
    border-radius: .5rem;
    padding: .75rem;
    font-size: 1rem;
    font-weight: 600;
    background: linear-gradient(135deg, #007bff, #0056b3);
    color: #fff;
    border: none;
  }
  .btn-register:hover {
    background: linear-gradient(135deg, #0056b3, #004085);
  }
  .register-footer {
    text-align: center;
    margin-top: 1.5rem;
    font-size: .875rem;
  }
  .register-footer a {
    color: #0056b3;
    text-decoration: none;
  }
  .register-footer a:hover {
    text-decoration: underline;
  }
  @@keyframes fadeInDown {
    from { opacity: 0; transform: translateY(-20px); }
    to   { opacity: 1; transform: translateY(0); }
  }
</style>

<div class="register-page">
  <div class="card register-card">
    <div class="card-header">
      Register
    </div>
    <div class="card-body">
      <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <div class="form-floating mb-3">
          <input asp-for="Input.Nome" class="form-control" placeholder="Nome" />
          <label asp-for="Input.Nome">Nome</label>
          <span asp-validation-for="Input.Nome" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
          <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email" />
          <label asp-for="Input.Email">Email</label>
          <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
          <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
          <label asp-for="Input.Password">Password</label>
          <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-floating mb-4">
          <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
          <label asp-for="Input.ConfirmPassword">Confirm Password</label>
          <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-register w-100">
          Register
        </button>

        <div class="register-footer">
          <p><a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">
            Already have an account? Log in</a></p>
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
