@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TrabalhoES2.Models.Depositoprazo

@{
    ViewData["Title"] = "Editar Depósito a Prazo";
    var bancos = ViewBag.Bancos as List<TrabalhoES2.Models.Banco>;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DepositoprazoId" />
    <input type="hidden" asp-for="AtivofinanceiroId" />

    <div class="form-group mb-3">
        <label>Duração (meses)</label>
        <input type="number" name="DuracaoMeses" value="@ViewBag.Duracao" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Taxa de Juro Anual (%)</label>
        <input type="number" step="0.01" asp-for="Taxajuroanual" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Valor Inicial (€)</label>
        <input type="number" step="0.01" asp-for="Valorinicial" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Banco</label>
        <select asp-for="BancoId" class="form-select">
            @foreach (var banco in bancos)
            {
                <option value="@banco.BancoId" selected="@(banco.BancoId == Model.BancoId)">
                    @banco.Nome
                </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="AtivosCatalogo" class="btn btn-secondary">Cancelar</a>
</form>