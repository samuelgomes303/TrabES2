@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TrabalhoES2.Models.Fundoinvestimento

@{
    ViewData["Title"] = "Eliminar Fundo de Investimento";
}

@* — estilos isolados para a confirmação de eliminação *@
<style>
  .form-card {
    max-width: 550px;
    margin: 2rem auto;
    border-radius: 1rem;
    box-shadow: 0 4px 16px rgba(0,0,0,.1);
    overflow: hidden;
  }
  .form-card .card-header {
    background: #dc3545;
    color: #fff;
    font-size: 1.25rem;
    text-align: center;
  }
  .detail-dl dt {
    font-weight: 600;
  }
  .btn-group {
    display: flex;
    gap: .5rem;
  }
</style>

<div class="card form-card">
  <div class="card-header">
    <i class="fas fa-exclamation-triangle me-2"></i>
    Eliminar Fundo de Investimento
  </div>
  <div class="card-body">
    <p class="mb-4">
      Tem a certeza que deseja eliminar o fundo 
      <strong>@Model.Nome</strong>?
    </p>
    <dl class="row detail-dl">
      <dt class="col-sm-4">Banco:</dt>
      <dd class="col-sm-8">@Model.Banco?.Nome</dd>

      <dt class="col-sm-4">Montante Investido:</dt>
      <dd class="col-sm-8">@Model.Montanteinvestido.ToString("C")</dd>

      <dt class="col-sm-4">Taxa de Juro:</dt>
      <dd class="col-sm-8">@Model.Taxajuropdefeito% </dd>
    </dl>
    <form asp-action="DeleteFundo" method="post" class="mt-4">
      <input type="hidden" asp-for="FundoinvestimentoId" />
      <div class="btn-group">
        <button type="submit" class="btn btn-danger flex-fill">
          <i class="fas fa-trash-alt me-1"></i> Eliminar
        </button>
        <a asp-action="AtivosCatalogo" class="btn btn-outline-secondary flex-fill">
          Cancelar
        </a>
      </div>
    </form>
  </div>
</div>
