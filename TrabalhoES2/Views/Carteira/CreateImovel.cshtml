@model TrabalhoES2.ViewModels.ImovelViewModel
@{
    ViewData["Title"] = "Adicionar Imóvel Arrendado";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateImovel" method="post">
    <div class="form-group">
        <label asp-for="Imovel.Designacao">Designação</label>
        <input asp-for="Imovel.Designacao" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Imovel.Localizacao">Localização</label>
        <input asp-for="Imovel.Localizacao" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Imovel.BancoId">Banco</label>
        <select asp-for="Imovel.BancoId" class="form-control" asp-items="@(new SelectList(ViewBag.Bancos, "BancoId", "Nome"))">
            <option value="">Selecione um banco</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Imovel.Valorimovel">Valor do Imóvel</label>
        <input asp-for="Imovel.Valorimovel" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Imovel.Valorrenda">Valor da Renda</label>
        <input asp-for="Imovel.Valorrenda" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Imovel.Valormensalcondo">Condomínio Mensal</label>
        <input asp-for="Imovel.Valormensalcondo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Imovel.Valoranualdespesas">Despesas Anuais</label>
        <input asp-for="Imovel.Valoranualdespesas" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Ativo.Duracaomeses">Duração (meses)</label>
        <input asp-for="Ativo.Duracaomeses" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Ativo.Percimposto">Imposto (%)</label>
        <input asp-for="Ativo.Percimposto" class="form-control" type="number" min="0" max="100" step="1" />
    </div>

    <button type="submit" class="btn btn-success">Criar</button>
    <a asp-action="AtivosCatalogo" class="btn btn-secondary">Cancelar</a>
</form>
