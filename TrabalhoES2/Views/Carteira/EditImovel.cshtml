@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TrabalhoES2.Models.Imovelarrendado

@{
    ViewData["Title"] = "Editar Imóvel Arrendado";
    var bancos = ViewBag.Bancos as List<TrabalhoES2.Models.Banco>;
}

@* — estilos isolados para esta view *@
<style>
  .form-card {
    max-width: 600px;
    margin: 2rem auto;
    border-radius: 1rem;
    box-shadow: 0 4px 16px rgba(0,0,0,.1);
    overflow: hidden;
  }
  .form-card .card-header {
    background: linear-gradient(135deg, #17a2b8, #117a8b);
    color: #fff;
    font-size: 1.25rem;
    text-align: center;
  }
  .form-floating > .form-control,
  .form-floating > .form-select {
    border-radius: .5rem;
  }
  .btn-group {
    display: flex;
    gap: .5rem;
  }
</style>

<div class="card form-card">
  <div class="card-header">@ViewData["Title"]</div>
  <div class="card-body">
    <form asp-action="EditImovel" method="post" novalidate>
      <input type="hidden" asp-for="ImovelarrendadoId" />
      <input type="hidden" asp-for="AtivofinanceiroId" />

      <div class="form-floating mb-3">
        <input asp-for="Designacao" class="form-control" placeholder="Designação" />
        <label asp-for="Designacao">Designação</label>
        <span asp-validation-for="Designacao" class="text-danger small"></span>
      </div>

      <div class="form-floating mb-3">
        <input asp-for="Localizacao" class="form-control" placeholder="Localização" />
        <label asp-for="Localizacao">Localização</label>
        <span asp-validation-for="Localizacao" class="text-danger small"></span>
      </div>

      <div class="form-floating mb-3">
        <select asp-for="BancoId"
                class="form-select"
                asp-items="@(new SelectList(ViewBag.Bancos, "BancoId", "Nome"))"
                placeholder="Banco">
          <option value="">Selecione um banco</option>
        </select>
        <label asp-for="BancoId">Banco</label>
        <span asp-validation-for="BancoId" class="text-danger small"></span>
      </div>

      <div class="form-floating mb-3">
        <input asp-for="Valorimovel"
               type="number" step="0.01"
               class="form-control"
               placeholder="Valor do Imóvel (€)" />
        <label asp-for="Valorimovel">Valor do Imóvel (€)</label>
        <span asp-validation-for="Valorimovel" class="text-danger small"></span>
      </div>

      <div class="form-floating mb-3">
        <input asp-for="Valorrenda"
               type="number" step="0.01"
               class="form-control"
               placeholder="Valor da Renda (€)" />
        <label asp-for="Valorrenda">Valor da Renda (€)</label>
        <span asp-validation-for="Valorrenda" class="text-danger small"></span>
      </div>

      <div class="form-floating mb-3">
        <input asp-for="Valormensalcondo"
               type="number" step="0.01"
               class="form-control"
               placeholder="Condomínio Mensal (€)" />
        <label asp-for="Valormensalcondo">Condomínio Mensal (€)</label>
        <span asp-validation-for="Valormensalcondo" class="text-danger small"></span>
      </div>

      <div class="form-floating mb-3">
        <input asp-for="Valoranualdespesas"
               type="number" step="0.01"
               class="form-control"
               placeholder="Despesas Anuais (€)" />
        <label asp-for="Valoranualdespesas">Despesas Anuais (€)</label>
        <span asp-validation-for="Valoranualdespesas" class="text-danger small"></span>
      </div>

      <div class="form-floating mb-4">
        <input name="DuracaoMeses"
               type="number"
               value="@ViewBag.Duracao"
               class="form-control"
               placeholder="Duração (meses)" />
        <label>Duração (meses)</label>
      </div>

      <div class="btn-group">
        <button type="submit" class="btn btn-success flex-fill">Guardar</button>
        <a asp-action="AtivosCatalogo" class="btn btn-outline-secondary flex-fill">Cancelar</a>
      </div>
    </form>
  </div>
</div>
