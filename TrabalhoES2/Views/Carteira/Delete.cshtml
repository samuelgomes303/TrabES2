@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TrabalhoES2.Models.Depositoprazo

@{
    ViewData["Title"] = "Eliminar Depósito a Prazo";
}

@* — estilos isolados para a confirmação de eliminação *@
<style>
  .form-card {
    max-width: 500px;
    margin: 2rem auto;
    border-radius: 1rem;
    box-shadow: 0 4px 16px rgba(0,0,0,.1);
    overflow: hidden;
  }
  .form-card .card-header {
    background: #dc3545;
    color: #fff;
    font-size: 1.25rem;
    text-align: center;
  }
  .detail-dl dt {
    font-weight: 600;
  }
  .btn-group {
    display: flex;
    gap: .5rem;
  }
</style>

<div class="card form-card">
  <div class="card-header">
    <i class="fas fa-exclamation-triangle me-2"></i>
    Confirmar Eliminação
  </div>
  <div class="card-body">
    <p class="text-danger mb-4">
      Tem a certeza que deseja eliminar este depósito a prazo?
    </p>
    <dl class="row detail-dl">
      <dt class="col-sm-5">Valor Inicial:</dt>
      <dd class="col-sm-7">@Model.Valorinicial.ToString("C")</dd>

      <dt class="col-sm-5">Taxa de Juro Anual:</dt>
      <dd class="col-sm-7">@Model.Taxajuroanual% </dd>

      <dt class="col-sm-5">Valor Atual:</dt>
      <dd class="col-sm-7">@Model.Valoratual.ToString("C")</dd>
    </dl>
    <form asp-action="Delete" method="post" class="mt-4">
      <input type="hidden" asp-for="DepositoprazoId" />
      <div class="btn-group">
        <button type="submit" class="btn btn-danger flex-fill">
          <i class="fas fa-trash-alt me-1"></i> Eliminar
        </button>
        <a asp-action="AtivosCatalogo" class="btn btn-outline-secondary flex-fill">
          Cancelar
        </a>
      </div>
    </form>
  </div>
</div>
