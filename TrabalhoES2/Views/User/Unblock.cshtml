@model TrabalhoES2.Models.Utilizador

@{
    ViewData["Title"] = "Desbloquear Utilizador";
}

@* — estilos isolados para confirmação de desbloqueio *@
<style>
  .form-card {
    max-width: 600px;
    margin: 2rem auto;
    border-radius: 1rem;
    box-shadow: 0 4px 16px rgba(0,0,0,.05);
    overflow: hidden;
  }
  .form-card .card-header {
    background: linear-gradient(135deg, #28a745, #218838);
    color: #fff;
    font-size: 1.5rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: .5rem;
    padding: 1rem;
  }
  .alert-success {
    border-radius: .5rem;
    box-shadow: 0 2px 8px rgba(0,0,0,.05);
    margin-bottom: 1.5rem;
    padding: 1rem;
  }
  .detail-dl dt {
    font-weight: 600;
    width: 30%;
  }
  .detail-dl dd {
    width: 70%;
  }
  .btn-group {
    display: flex;
    gap: .5rem;
    margin-top: 1.5rem;
  }
  .btn-success, .btn-secondary {
    flex: 1;
  }
</style>

<div class="card form-card">
  <div class="card-header">
    <i class="fas fa-unlock me-1"></i> Desbloquear Utilizador
  </div>
  <div class="card-body">
    <div class="alert alert-success">
      <h3 class="mb-2">Tem a certeza que deseja desbloquear este utilizador?</h3>
      <p>O utilizador poderá voltar a aceder à aplicação após ser desbloqueado.</p>
    </div>

    <dl class="row detail-dl">
      <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Nome)</dt>
      <dd class="col-sm-8">@Html.DisplayFor(m => m.Nome)</dd>

      <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Email)</dt>
      <dd class="col-sm-8">@Html.DisplayFor(m => m.Email)</dd>

      <dt class="col-sm-4">@Html.DisplayNameFor(m => m.TpUtilizador)</dt>
      <dd class="col-sm-8">@Html.DisplayFor(m => m.TpUtilizador)</dd>

      <dt class="col-sm-4">Bloqueado Em</dt>
      <dd class="col-sm-8">
        @Model.BlockedAt?.ToString("yyyy-MM-dd HH:mm")
      </dd>
    </dl>

    <form asp-action="Unblock">
      <input type="hidden" asp-for="Id" />
      <div class="btn-group">
        <button type="submit" class="btn btn-success">
          <i class="fas fa-unlock-alt me-1"></i> Desbloquear
        </button>
        <a asp-action="Index" class="btn btn-secondary">
          <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
        </a>
      </div>
    </form>
  </div>
</div>
