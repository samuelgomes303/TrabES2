@model TrabalhoES2.Models.Utilizador

@{
    ViewData["Title"] = "Bloquear Utilizador";
}

@* — estilos isolados para a confirmação de bloqueio de utilizador *@
<style>
  .form-card {
    max-width: 600px;
    margin: 2rem auto;
    border-radius: 1rem;
    box-shadow: 0 4px 16px rgba(0,0,0,.05);
    overflow: hidden;
  }
  .form-card .card-header {
    background: linear-gradient(135deg, #ffc107, #e0a800);
    color: #212529;
    font-size: 1.5rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: .5rem;
  }
  .alert-warning {
    border-radius: .5rem;
    box-shadow: 0 2px 8px rgba(0,0,0,.05);
  }
  .detail-dl dt {
    font-weight: 600;
    width: 30%;
  }
  .detail-dl dd {
    width: 70%;
  }
  .btn-group {
    display: flex;
    gap: .5rem;
    margin-top: 1.5rem;
  }
  .btn-warning {
    flex: 1;
  }
  .btn-secondary {
    flex: 1;
  }
</style>

<div class="card form-card">
  <div class="card-header">
    <i class="fas fa-user-lock"></i> Bloquear Utilizador
  </div>
  <div class="card-body">
    <div class="alert alert-warning">
      <h3 class="mb-2">Tem a certeza que deseja bloquear este utilizador?</h3>
      <p>O utilizador não poderá aceder à aplicação enquanto estiver bloqueado, mas poderá ser desbloqueado posteriormente.</p>
    </div>

    <dl class="row detail-dl">
      <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Nome)</dt>
      <dd class="col-sm-8">@Html.DisplayFor(m => m.Nome)</dd>

      <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Email)</dt>
      <dd class="col-sm-8">@Html.DisplayFor(m => m.Email)</dd>

      <dt class="col-sm-4">@Html.DisplayNameFor(m => m.TpUtilizador)</dt>
      <dd class="col-sm-8">@Html.DisplayFor(m => m.TpUtilizador)</dd>
    </dl>

    <form asp-action="Block" class="mt-4">
      <input type="hidden" asp-for="Id" />
      <div class="btn-group">
        <button type="submit" class="btn btn-warning">
          <i class="fas fa-lock me-1"></i> Bloquear
        </button>
        <a asp-action="Index" class="btn btn-secondary">
          <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
        </a>
      </div>
    </form>
  </div>
</div>
