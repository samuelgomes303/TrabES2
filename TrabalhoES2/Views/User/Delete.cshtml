@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TrabalhoES2.Models.Utilizador

@{
    ViewData["Title"] = "Remover Utilizador";
}

@* — estilos isolados para confirmação de remoção de utilizador *@
<style>
  .form-card {
    max-width: 600px;
    margin: 2rem auto;
    border-radius: 1rem;
    box-shadow: 0 4px 16px rgba(0,0,0,.05);
    overflow: hidden;
  }
  .form-card .card-header {
    background: linear-gradient(135deg, #dc3545, #a71d2a);
    color: #fff;
    font-size: 1.5rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: .5rem;
  }
  .alert-danger {
    border-radius: .5rem;
    box-shadow: 0 2px 8px rgba(0,0,0,.05);
  }
  .detail-dl dt {
    font-weight: 600;
    width: 30%;
  }
  .detail-dl dd {
    width: 70%;
  }
  .btn-group {
    display: flex;
    gap: .5rem;
    margin-top: 1.5rem;
  }
  .btn-danger, .btn-secondary {
    flex: 1;
  }
</style>

<div class="card form-card">
  <div class="card-header">
    <i class="fas fa-user-times"></i> Remover Utilizador
  </div>
  <div class="card-body">
    <div class="alert alert-danger">
      <h3 class="mb-2">Tem a certeza que deseja remover este utilizador?</h3>
      <p>Os dados do utilizador permanecerão na base de dados mas serão marcados como removidos e o utilizador não poderá mais aceder à aplicação.</p>
    </div>

    <dl class="row detail-dl mt-4">
      <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Nome)</dt>
      <dd class="col-sm-8">@Html.DisplayFor(m => m.Nome)</dd>

      <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Email)</dt>
      <dd class="col-sm-8">@Html.DisplayFor(m => m.Email)</dd>

      <dt class="col-sm-4">@Html.DisplayNameFor(m => m.TpUtilizador)</dt>
      <dd class="col-sm-8">@Html.DisplayFor(m => m.TpUtilizador)</dd>

      @if (Model.IsBlocked)
      {
        <dt class="col-sm-4">Estado Atual</dt>
        <dd class="col-sm-8">
          <span class="badge bg-warning text-dark">Bloqueado</span>
          <small>(@Model.BlockedAt?.ToString("yyyy-MM-dd HH:mm"))</small>
        </dd>
      }
    </dl>

    <form asp-action="Delete" class="mt-4">
      <input type="hidden" asp-for="Id" />
      <div class="btn-group">
        <button type="submit" class="btn btn-danger">
          <i class="fas fa-trash-alt me-1"></i> Remover
        </button>
        <a asp-action="Index" class="btn btn-secondary">
          <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
        </a>
      </div>
    </form>
  </div>
</div>
