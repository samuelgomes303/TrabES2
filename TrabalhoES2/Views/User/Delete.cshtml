@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TrabalhoES2.Models.Utilizador

@{
    ViewData["Title"] = "Remover Utilizador";
}

<h1>Remover Utilizador</h1>

<div class="alert alert-danger">
    <h3>Tem a certeza que deseja remover este utilizador?</h3>
    <p>Os dados do utilizador permanecerão na base de dados mas serão marcados como removidos e o utilizador não poderá mais aceder à aplicação.</p>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TpUtilizador)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TpUtilizador)
        </dd>
        @if (Model.IsBlocked)
        {
            <dt class="col-sm-2">
                Estado Atual
            </dt>
            <dd class="col-sm-10">
                <span class="badge bg-warning text-dark">Bloqueado</span>
                <small>(@Model.BlockedAt?.ToString("yyyy-MM-dd HH:mm"))</small>
            </dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
    </form>
</div>